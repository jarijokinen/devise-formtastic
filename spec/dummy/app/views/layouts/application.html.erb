<!DOCTYPE html>
<html>
  <head>
    <title><%= "#{@title} | " unless @title.blank? %>Dummy</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav>
      <ul>
        <% if user_signed_in? %>
          <li><%= link_to(t("devise.links.my_account"), edit_user_registration_path) %></li>
          <li><%= link_to(t("devise.links.sign_out"), destroy_user_session_path, method: :delete) %></li>
        <% else %>
          <li><%= link_to(t("devise.links.sign_in"), new_user_session_path) %></li>
          <li><%= link_to(t("devise.links.sign_up"), new_user_registration_path) %></li>
        <% end %>
      </ul>
    </nav>
    <%= content_tag(:h1, @title) unless @title.blank? %>
    <%= yield %>
  </body>
</html>
